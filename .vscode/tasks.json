{
    "version": "2.0.0",
    "tasks": [
		{
			"type"   : "shell",
			"label"  : "build_debug",
			"detail" : "Build Debug Bladebit",
			"command": "cmake",

			"args": [
				"--build", ".",
				"--target", "bladebit",
				"--config", "Debug",
				"-j", "24"
			],
			
			"windows":{
			},

			"linux":{
				"problemMatcher": [ "$gcc" ]
			},

			"osx":{
				"problemMatcher": [ "$gcc" ]
			},

			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}

